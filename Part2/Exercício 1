using System;


namespace testedemesa1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            decimal valorFuturo, valorPresente, taxa ;

            valorPresente = 2000.00m;
            taxa = 2.00m / 100;
            int periodo = 12;

            valorFuturo = valorPresente *12 (decimal)Math.Pow((double)(1 + taxa), periodo);

            Console.WriteLine($"valor presente: {valorPresente:F2}");
            Console.WriteLine($"por {periodo} meses");
            Console.WriteLine($"valor futuro: {valorFuturo:F2}");
            Console.WriteLine($"taxa: {taxa:F2}");



            Console.ReadKey();
        }
    }
}
